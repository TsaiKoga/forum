<!DOCTYPE html>
<html>
<head>
  <title>RailsChina - Control Panel</title>
  <%= stylesheet_link_tag "cpanel" %>
  <%= javascript_include_tag "app" %>
  <%= csrf_meta_tag %>
</head>

<body>
	  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
				<ul class="nav">
					<li><%= link_to("控制台", cpanel_root_path, class: "brand span2")%></li>
					<li><%= link_to("版块", cpanel_sections_path)%></li>
					<li><%= link_to("节点", cpanel_nodes_path)%></li>
					<li><%= link_to("帖子", cpanel_topics_path)%></li>
				</ul>
        <div class="nav-collapse">

          <ul class="nav  pull-right">
            <li class="dropdown" id="user_menu">
              <a href="#user_menu" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class='caret'></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to("回到前台", root_path)%></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="breadcrumb">
    </div>

    <div id="main" class="box">
			<% flash.each do |key, value|%>
				<div class="alert alert-<%= key%>">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<%= value%>
				</div>
			<%end%>
			
      <%= yield %>
    </div>

  </div>

  <footer class="footer">
    <div class="container">
    </div>
  </footer>

</body>

</html>

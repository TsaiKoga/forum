<div class="hidden-phone">
	<ul class="breadcrumb">
		<li><%=link_to "Home", root_path %><span class="divider">/</span></li>
		<li><%=link_to "社区", topics_path %><span class="divider">/</span></li>
		<li><%=link_to "修改回帖", edit_topic_reply_path(@topic, @reply) %></li>
	</ul>
</div>

<div id="main" class="container-fluid">
	<div class="sidebar">
		<div class="box">
		</div>
		<div class="box">
			<h2>广告</h2>
		</div>
	</div>

	<div class="content">
		<div class="box">
			<%= simple_form_for [@topic, @reply], html: {class: 'form-horizontal edit_reply'} do |f| %>
				<div class="control-group edit_tools">
					<%= render "/topics/editor_toolbar" %>
				</div>
				
				<!--TODO-->
				<div class="control-group">
					<%= f.text_area :content, :class => "topic_editor", 'data-disable-with' => "正在保存..." %>
				</div>

				<div class="control-group">
					<%= f.submit "保存", :class => "btn btn-primary" %>
					<%= link_to "删除",[@topic,@reply], :class => "pull-right btn btn-danger", :method => :delete, :data => { :confirm => "确定要删除此回复么？" } %>
				</div>
				
			<% end %>
		</div>
	</div>

</div>

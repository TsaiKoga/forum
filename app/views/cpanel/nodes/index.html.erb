<div id="console_home" class="container-fuild">
	<h1>所有节点</h1>

	<table class="table table-bordered table-striped table-condensed">
		<tr class="head">
			<td class="first">ID</td>
			<td>Name</td>
			<td>Section</td>
			<td>Sort</td>
			<td>Topics count</td>
			<td></td>
		</tr>

	<% @nodes.each do |node| %>
		<tr>
			<td class="first"><%= node.id %></td>
			<td><%= node.name %></td>
			<td><%= node.section.name %></td>
			<td><%= node.sort %></td>
			<td><%= node.topics_count %></td>
			<td><%= link_to '修改节点', edit_cpanel_node_path(node), :class => "btn btn-small btn-success" %>
			<%= link_to '删除节点', cpanel_node_path(node), 'data-confirm' => 'Are you sure?' , :method => :delete, :class => "btn btn-small btn-danger" %></td>
		</tr>
	<% end %>
	</table>
	
	<br />

	<%= link_to '创建节点', new_cpanel_node_path, class: "btn btn-primary" %>
</div>

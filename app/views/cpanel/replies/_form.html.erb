<%= simple_form_for([:cpanel, @reply]) do |f| %>
  <fieldset>
    <legend></legend>
    <%= f.input :content, :as => :text, :input_html => { :class => "span8", :rows => "10"} %>
    <%= f.input :user_id %>
    <div class="form-actions">
      <%= f.submit "保存", class: "btn btn-primary", 'data-disable-with' => "保存中..." %>
      or
      <%= link_to 'Back', cpanel_replies_path, class: "btn" %>
    </div>
  </fieldset>
<% end %>

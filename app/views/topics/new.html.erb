<div class="hidden-phone">
	<ul class="breadcrumb">
		<li><%=link_to "Home", root_path %><span class="divider">/</span></li>
		<li><%=link_to "社区", topics_path %></li>
	</ul>
</div>

<div id="main" class="container-fluid">
	<div class="content">
		<div class='box box_gray'>
			<div id="node_info">
				<div class="sorts">
					<span class="lb">查看:</span>
					<ul></ul>
				</div>
			</div>
			
			<div class="topics">
				<%= form_for @topic, html: {class: 'form-horizontal'} do |f| %>
					<fieldset>
						<div class="control-group">
							<%= f.label :title, class: "control-label" do%>
								<abbr class="required">*</abbr>
								标题
							<%end%>
							<div class="controls">
								<%= f.text_field :title, :autofocus => true %>
							</div>
						</div>
						
						<div class="control-group">
							<%= f.label :content, class: "control-label" do%>
								<abbr class="required">*</abbr>
								正文	
							<%end%>
							<div class="controls">
								<%= f.text_area :content, :autofocus => true %>
							</div>
						</div>
					</fieldset>

					<div class="form-actions">
						<%= f.submit "保存", class: 'btn btn-primary btn-small' %>
					</div>
				<% end %>
			</div>
		</div>

		<div class="sidebar">
			<div class="box" style="text-align: center;">
				<%= link_to "发布新帖", new_topic_path, class: "btn btn-success" %>
			</div>
		</div>
	</div>
</div>
